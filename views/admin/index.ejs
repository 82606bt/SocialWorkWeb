                    <!-- Modal -->
                    <div id="modal-container-qtv">
                        <div id="modal-qtv">
                            <div class="modal-header">
                                <button class="btn-title" disabled>
                                    THÊM QUẢN TRỊ VIÊN
                                    <i id="btn-close" class="fa fa-close"></i>
                                </button>

                            </div>
                            <div class="modal-body-qtv">
                                <form class="form-register-admin" id="createAdmin" method="post">
                                    <p>
                                        <label>Tài Khoản <i style="color:red">*</i></label>
                                        <label class="label-password">Mật Khẩu <i style="color:red">*</i></label>
                                    </p>
                                    <p>
                                        <input type="text" id="username" class="input-account" placeholder="Bắt buộc"
                                            required>

                                        <input type="password" id="password" class="input-password"
                                            placeholder="Bắt buộc" required>
                                    </p>
                                    <p>
                                        <hr />
                                    </p>
                                    <p>
                                        <label class="label-left">Họ và Tên<i style="color:red">*</i></label>
                                        <label class="label-gender">Giới Tính<i style="color:red">*</i></label>
                                    </p>
                                    <p>
                                        <input type="text" id="_fullname" id="input-name" required>

                                        <input type="radio" id="gender" value="true"
                                            style="margin-left: -3em;height: 12px;"><a style="margin-left:-8em;">Nam</a>
                                        <input type="radio" id="gender" value="false"
                                            style="margin-left: 11.66em;height: 12px;"><a
                                            style="margin-left:-8em;">Nữ</a>

                                    </p>
                                    <p>
                                        <label class="label-left">Số điện thoại<i style="color:red">*</i></label>
                                        <label class="label-date">Ngày sinh<i style="color:red">*</i></label>
                                    </p>
                                    <p>
                                        <input type="tel" id="phone" name="phone" class="form-control"
                                            pattern="[0-9]{10}" required>

                                        <input type="date" id="birthday" class="input-right" required>
                                    </p>
                                    <p>
                                        <label class="label-left">Email<i style="color:red">*</i></label>
                                        <label class="label-address">Địa chỉ<i style="color:red">*</i></label>
                                    </p>
                                    <p>
                                        <input type="email" id="mail" pattern=".+@gmail\.com" size="30" required>

                                        <input type="text" id="address" class="input-right">
                                    </p>
                                    <p>
                                        <label class="label-left">Chức vụ<i style="color:red">*</i></label>
                                    </p>
                                    <p>
                                        <input type="text" id="position" required>
                                    </p>
                                    <p>
                                        <button id="btn-submit" class="btn-submit">THÊM</button>
                                    </p>

                                </form type="submit">
                            </div>
                        </div>

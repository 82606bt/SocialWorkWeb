        </div>
        <script>
            const form = document.getElementById('createAdmin');
            const username = document.getElementById('username');
            const Password = document.getElementById('password');
            const Fullname = document.getElementById('_fullname');
            const Gender = document.getElementById('gender');
            const Phone = document.getElementById('phone');
            const Birthday = document.getElementById('birthday');
            const Email = document.getElementById('mail');
            const Address = document.getElementById('address');
            const Position = document.getElementById('position');

            form.addEventListener('submit', (event) => {
                event.preventDefault();
                const _id = sessionStorage.getItem('_id');
                const _username = username.value;
                const _password = Password.value;
                const _gender = Gender.value;
                const _fullname = Fullname.value;
                const _phone = Phone.value;
                const _birthday = Birthday.value;
                const _mail = Email.value;
                const _address = Address.value;
                const _position = Position.value;
                const data = {
                    _id: _id,
                    username: _username,
                    password: _password,
                    fullname: _fullname,
                    gender: _gender,
                    birthday: _birthday,
                    mail: _mail,
                    phone: _phone,
                    address: _address,
                    position: _position,
                }
                const options = {
                    headers: {
                        'key': 'projectquanlycongtacxahoi'
                    }
                }
                axios.post("https://quan-ly-cong-tac-xa-hoi.vercel.app/account/create-new-admin", data, options)
                    .then((response) => {
                        if (response.data.status === 1) {
                            alert("Tạo tài khoản thành công")
                            return window.location.href = "/admin";
                        }
                        else {
                            alert(response.data.msg)
                        }
                    }).catch(error => {
                        console.log(error)
                    });
            });
        </script>

        <script>

            const logout = document.getElementById('logout');
            //Logout
            logout.addEventListener('click', () => {
                sessionStorage.removeItem("_id");
                return window.location.href = "/";
            });

            const Username = document.getElementById('_username');
            Username.value = sessionStorage.getItem("fullname");



            const btn_open = document.getElementById('btn-open');
            const btn_close = document.getElementById('btn-close');
            const modal_container = document.getElementById('modal-container-qtv');
            btn_open.addEventListener('click', () => {
                //Add class .show
                modal_container.classList.add('show')
            });
            btn_close.addEventListener('click', () => {
                //Add class .show
                modal_container.classList.remove('show')
            });
        </script>
</body>

